<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.learning.matthew.myapplication.AddGroup">

    <EditText
        android:id="@+id/edit_group_title"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"/>

    <EditText
        android:textSize="30sp"
        android:id="@+id/edit_group_description"
        android:layout_below="@id/edit_group_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Description"/>

    <Button
        android:id="@+id/create_group"
        android:onClick="sendGroupInformation"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_below="@id/edit_group_description"
        android:text="Click here to create a new Group"/>

</RelativeLayout>
