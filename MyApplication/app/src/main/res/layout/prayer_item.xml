<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prayer_item_title"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prayer_item_category"
        android:textSize="28dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prayer_item_message"
        android:textSize="28dp"
        android:layout_below="@+id/category"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/counterButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="You haven't prayed yet!"
        android:textSize="20dp"
        android:layout_below="@+id/message"/>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garbage_black_32"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>